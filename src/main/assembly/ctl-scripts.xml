<?xml version="1.0" encoding="utf-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
	                    http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>ctl-scripts</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.scriptSourceDirectory}/ctl</directory>
      <outputDirectory>${ets-code}/${spec-version}</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/javadoc</directory>
      <outputDirectory>${ets-code}/${spec-version}/web</outputDirectory>
      <excludes>
        <exclude>**/*.html</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/javadoc</directory>
      <outputDirectory>${ets-code}/${spec-version}/web</outputDirectory>
      <includes>
        <include>**/*.html</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.basedir}/src/main/config/teamengine/config.xml</source>
      <outputDirectory>${ets-code}/${spec-version}</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
</assembly>
